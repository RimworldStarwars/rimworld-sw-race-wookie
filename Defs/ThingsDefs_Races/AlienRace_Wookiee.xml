<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!-- =Wookiee Base = -->

    <AlienRace.ThingDef_AlienRace ParentName="BasePawn">
        <defName>Alien_Wookiee</defName>
        <label>wookiee</label>
        <description>Wookiees are devoted, loyal friends and are very distrustful of strangers. Life debt is sacred to them.</description>
        <statBases>
            <MarketValue>2000</MarketValue>
            <MoveSpeed>3.0</MoveSpeed>
            <Flammability>1.0</Flammability>
			<PsychicSensitivity>0.25</PsychicSensitivity>
            <ComfyTemperatureMin>-30</ComfyTemperatureMin>
            <ComfyTemperatureMax>30</ComfyTemperatureMax>
            <LeatherAmount>30</LeatherAmount>
			<SocialImpact>0.5</SocialImpact>
        </statBases>
        <tools>
            <li>
                <label>left fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>6</power>
                <cooldownTime>2.0</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>40</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>right fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>6</power>
                <cooldownTime>2.0</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>40</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <commonality>0.2</commonality>
            </li>
        </tools>
        <race>
            <thinkTreeMain>Humanlike</thinkTreeMain>
            <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
            <intelligence>Humanlike</intelligence>
            <makesFootprints>true</makesFootprints>
            <lifeExpectancy>600</lifeExpectancy>
	        <leatherLabel>wookiee skin</leatherLabel>
            <leatherColor>(0.4,0.2,0.)</leatherColor>
            <leatherCommonalityFactor>0.01</leatherCommonalityFactor>
            <leatherInsulation>0.70</leatherInsulation>
            <leatherMarketValueFactor>2</leatherMarketValueFactor>
    	    <meatLabel>wookiee flesh</meatLabel>
            <meatColor>(192,57,43)</meatColor>
            <nameCategory>HumanStandard</nameCategory>
            <body>Human</body>
            <baseBodySize>1.25</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
            <foodType>OmnivoreHuman</foodType>
            <gestationPeriodDays>45</gestationPeriodDays>
            <litterSizeCurve>
                <points>
                    <li>(0.5, 0)</li>
                    <li>(1, 1)</li>
                    <li>(1.01, 0.02)</li>
                    <li>(3.5, 0)</li>
                </points>
            </litterSizeCurve>
            <lifeStageAges>
                <li>
                    <def>WookieeBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>WookieekYoungAdult</def>
                    <minAge>12</minAge>
                </li>
                <li>
                    <def>WookieeAdult</def>
                    <minAge>18</minAge>
                </li>
                <li>
                    <def>WookieePrimeAdult</def>
                    <minAge>200</minAge>
                </li>
                <li>
                    <def>WookieeMiddleAge</def>
                    <minAge>301</minAge>
                </li>
		        <li>
                    <def>WookieeOldAge</def>
                    <minAge>351</minAge>
                </li>
		        <li>
                    <def>WookieeVenerable</def>
                    <minAge>400</minAge>
                </li>
		        <li>
                    <def>WookieeElderly</def>
                    <minAge>600</minAge>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
            <specialShadowData>
                <volume>(0.3, 0.8, 0.4)</volume>
                <offset>(0,0,-0.3)</offset>
            </specialShadowData>
            <ageGenerationCurve>
                <points>
                    <li>(0,0)</li>
                    <li>(12,50)</li>
                    <li>(18,100)</li>
                    <li>(200,100)</li>
                    <li>(350,50)</li>
                    <li>(400,10)</li>
                    <li>(600,0)</li>
                </points>
            </ageGenerationCurve>
            <hediffGiverSets>
                <li>OrganicStandard</li>
            </hediffGiverSets>
        </race>
        <recipes>
            <li>InstallPowerClaw</li>
            <li>InstallScytherBlade</li>
            <li>InstallBionicEye</li>
            <li>InstallBionicArm</li>
            <li>InstallBionicLeg</li>
            <li>InstallSimpleProstheticArm</li>
            <li>InstallSimpleProstheticLeg</li>
            <li>InstallPegLeg</li>
            <li>InstallDenture</li>
            <li>InstallJoywire</li>
            <li>InstallPainstopper</li>
            <li>InstallNaturalHeart</li>
            <li>InstallNaturalLung</li>
            <li>InstallNaturalKidney</li>
            <li>InstallNaturalLiver</li>
            <li>ExciseCarcinoma</li>
            <li>AdministerMechSerumHealer</li>
            <li>RemoveBodyPart</li>
            <li>Euthanize</li>
            <li>Anesthetize</li>
        </recipes>
        <alienRace> 
            <generalSettings>
                <humanRecipeImport>true</humanRecipeImport>
                <pawnsSpecificBackstories>true</pawnsSpecificBackstories>
                <immuneToAge>false</immuneToAge>
                <alienPartGenerator>
	                <customDrawSize>(1.2, 1.15)</customDrawSize>
		            <customPortraitDrawSize>(1, 1)</customPortraitDrawSize>
				    <alienbodytypes>
					    <li>Male</li>
					    <li>Female</li>
                    </alienbodytypes>
                    <aliencrowntypes>
                        <li>Average_Normal</li>
                    </aliencrowntypes>
                    <useGenderedHeads>true</useGenderedHeads>
                    <alienskincolorgen Class="ColorGenerator_Options">
                        <options>
                            <li>
                                <weight>10</weight>
                                <only>RGBA(153,102,51)</only>
                            </li>
			                <li>
                                <weight>10</weight>
                                <only>RGBA(153,102,0)</only>
                            </li>
			                <li>
                                <weight>10</weight>
                                <only>RGBA(185,92,0)</only>
                            </li>
			                <li>
                                <weight>10</weight>
                                <only>RGBA(204,102,0)</only>
                            </li>
                            <li>
                                <weight>5</weight>
                                <only>RGBA(153,51,0)</only>
                            </li>
                            <li>
                                <weight>5</weight>
                                <only>RGBA(189,189,189)</only>
                            </li>
			                <li>
                                <weight>5</weight>
                                <only>RGBA(69,69,69)</only>
                            </li>
			                <li>
                                <weight>2</weight>
                                <only>RGBA(194,194,194)</only>
                            </li>
			                <li>
                                <weight>2</weight>
                                <only>RGBA(91,80,62)</only>
                            </li>
                        </options>
                    </alienskincolorgen>
                </alienPartGenerator>
            </generalSettings>
            <graphicPaths>
                <li>
			        <headOffset>(0,	-0.02)</headOffset>
                    <body>Things/Wookiee/Bodies/</body>
                    <head>Things/Wookiee/Heads/</head>
                    <skeleton/>
                    <skull/>
                </li>
            </graphicPaths>
            <hairSettings>
                <hasHair>false</hasHair>
            </hairSettings>
            <pawnKindSettings>
                <alienslavekinds>
                    <li>
                        <kindDefs>
                            <li>WookieeSlave</li>
                        </kindDefs>
                            <chance>40.0</chance>
                    </li>
                </alienslavekinds>
                 <alienrefugeekinds>
                    <li> 
                        <kindDefs>
					        <li>WookieeWarrior</li>
                            <li>WookieeArcher</li>
                            <li>WookieeHunter</li>
				            <li>WookieeHeavyArcher</li>
						    <li>WookieeBerserker</li>
				            <li>WookieeChief</li>
                        </kindDefs> 
                        <chance>50.0</chance>                        
                    </li>
                </alienrefugeekinds>
                <startingColonists>
				    <li>
				        <pawnKindEntries>
					        <li>
                                <kindDefs>
						            <li>WookieeWarrior</li>
                                    <li>WookieeArcher</li>
                                    <li>WookieeHunter</li>
					                <li>WookieeHeavyArcher</li>
						    	    <li>WookieeBerserker</li>
					    	        <li>WookieeChief</li>
                                </kindDefs>
                                <chance>10.0</chance>
					        </li>
				        </pawnKindEntries>                       
					    <factionDefs>
						   <li>WookieePlayerColony</li> 
					    </factionDefs>
                    </li>               
			    </startingColonists>
                 <alienwandererkinds>
                    <li> 
                        <pawnKindEntries>
                            <li>
                                <kindDefs>
                                    <li>WookieeWarrior</li>
                                    <li>WookieeArcher</li>
                                    <li>WookieeHunter</li>
                                    <li>WookieeHeavyArcher</li>
                                    <li>WookieeBerserker</li>
                                    <li>WookieeChief</li>
                                </kindDefs> 
                                <chance>50.0</chance>
                            </li>
                        </pawnKindEntries>
                        <factionDefs>
						   <li>WookieePlayerColony</li> 
					    </factionDefs>                         
                    </li>
                </alienwandererkinds>
            </pawnKindSettings>        
	        <thoughtSettings>
                <cannotReceiveThoughts>
					<li>Naked</li>
                    <li>ObservedLayingCorpse</li>
                    <li>ButcheredHumanlikeCorpse</li>
                    <li>KnowButcheredHumanlikeCorpse</li>
                </cannotReceiveThoughts>
	        </thoughtSettings>
        </alienRace>    
    </AlienRace.ThingDef_AlienRace>

</Defs>
