<?xml version="1.0" encoding="utf-8" ?>

<Defs>

    <FactionDef>
	    <defName>Wookiee</defName>
	    <label>Wookiee Clan</label>
        <description>A colony of the mysterious Wookiee race.</description>
        <pawnsPlural>wookiee</pawnsPlural>
        <baseSelectionWeight>1.5</baseSelectionWeight>
        <requiredCountAtGameStart>1</requiredCountAtGameStart>
        <canMakeRandomly>true</canMakeRandomly>
        <canSiege>true</canSiege>
        <canStageAttacks>true</canStageAttacks>
        <leaderTitle>Chief</leaderTitle>
        <expandingIconTexture>World/WorldObjects/WookieeFactionBase</expandingIconTexture>
        <colorSpectrum>
        </colorSpectrum>
        <startingGoodwill>
            <min>10</min>
            <max>40</max>
        </startingGoodwill>
	    <factionNameMaker>NamerFactionTribal</factionNameMaker>
	    <baseNameMaker>NamerFactionBaseTribal</baseNameMaker>
	    <techLevel>Neolithic</techLevel>
	    <backstoryCategory>WookieeBackstory</backstoryCategory>
	    <geneticVariance>0.8</geneticVariance>
        <naturalColonyGoodwill>
            <min>10</min>
            <max>30</max>
        </naturalColonyGoodwill>
        <caravanTraderKinds>
            <li>Caravan_Wookiee_BulkGoods</li>
            <li>Caravan_Wookiee_WarMerchant</li>
            <li>Caravan_Wookiee_Slaver</li>
            <li>Caravan_Wookiee_ShamanMerchant</li>
        </caravanTraderKinds>
        <visitorTraderKinds>
            <li>Visitor_Wookiee_Standard</li>
        </visitorTraderKinds>
        <baseTraderKinds>
            <li>Base_Wookiee_Standard</li>
        </baseTraderKinds>
        <allowedArrivalTemperatureRange>
            <min>-30</min>
            <max>30</max>
        </allowedArrivalTemperatureRange>
        <pawnGroupMakers>
            <li>
			    <!-- Normal fights, standard mix -->
                <kindDef>Normal</kindDef>
                <options>
                    <WookieeWarrior>50</WookieeWarrior>
                    <WookieeArcher>100</WookieeArcher>
                    <WookieeHunter>130</WookieeHunter>
                    <WookieeHeavyArcher>130</WookieeHeavyArcher>
                    <WookieeBerserker>170</WookieeBerserker>
                    <WookieeChief>250</WookieeChief>
                </options>
            </li>
	        <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <WookieeTrader>1</WookieeTrader>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2</Alpaca>
                    <Elephant>1</Elephant>
                </carriers>
                <guards>
                    <WookieeWarrior>50</WookieeWarrior>
                    <WookieeArcher>100</WookieeArcher>
                    <WookieeHunter>130</WookieeHunter>
                    <WookieeHeavyArcher>130</WookieeHeavyArcher>
                </guards>
            </li>
	        <li>
			    <!-- Base defense -->
                <kindDef>FactionBase</kindDef>
                <options>
                    <WookieeWarrior>50</WookieeWarrior>
                    <WookieeArcher>100</WookieeArcher>
                    <WookieeHunter>130</WookieeHunter>
                    <WookieeHeavyArcher>130</WookieeHeavyArcher>
                    <WookieeBerserker>170</WookieeBerserker>
                    <WookieeChief>250</WookieeChief>
                </options>
            </li>
        </pawnGroupMakers>
        <homeIconPath>World/WorldObjects/WookieeFactionBase</homeIconPath>
    </FactionDef>

</Defs>